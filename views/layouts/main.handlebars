<!-- index.html -->
<html>
  <head>
    <title>Hello React</title>
    <script src="/js/react-with-addons.js"></script>
    <script src="/js/JSXTransformer.js"></script>
    <script src="/js/jquery.js"></script>
  </head>
  <body>
    <div id="trip"></div>
    <div id="content"></div>
    <script type="text/jsx">


var ItemList = React.createClass({
	render: function() {
		var itemNodes = this.props.data.map(function (item) {
			return (
				<Item receiptText={item.receiptText}
					  product={item.product}
					  price={item.price}
					  discount={item.discount}
					  tags={item.tags}
					  >
				</Item>
				);
			});
		return (
			<div className="itemList">
				{itemNodes}
			</div>
		);
	}
});

var ItemForm = React.createClass({
	handleSubmit: function(e) {
		e.preventDefault();
		var receiptText = React.findDOMNode(this.refs.receiptText).value.trim();
		var product     = React.findDOMNode(this.refs.product).value.trim();
		var price       = React.findDOMNode(this.refs.price).value.trim();
		var discount    = React.findDOMNode(this.refs.discount).value.trim();
		var tags        = React.findDOMNode(this.refs.tags).value.trim();

		this.props.onItemSubmit({
			receiptText: receiptText,
			product: product,
			price: price,
			discount: discount,
			tags: tags,
		});

		React.findDOMNode(this.refs.receiptText).value = '';
		React.findDOMNode(this.refs.product).value = '';
		React.findDOMNode(this.refs.price).value = '';
		React.findDOMNode(this.refs.discount).value = '';
		React.findDOMNode(this.refs.tags).value = '';
		return;
	},
	render: function() {
		return (
			<form className="itemForm" onSubmit={this.handleSubmit}>
				<input type="text" placeholder="Receipt Text" ref="receiptText" name="receiptText"/>
				<input type="text" placeholder="Product"      ref="product" name="product"/>
				<input type="text" placeholder="Price"        ref="price" name="price"/>
				<input type="text" placeholder="Discount"     ref="discount" name="discount" />
				<input type="text" placeholder="Tags" ref="tags" name="tags" />
				<input type="submit" value="Post" />
			</form>
		);
	}
});

var Item = React.createClass({
	render: function() {
		console.log( this.props );
		return (
			<div className="item">
				{this.props.receiptText}
				{this.props.product}
				{this.props.price}
				{this.props.discount}
				{this.props.tags}
			</div>
		);
	}
});

var ItemBox = React.createClass({
	loadItemsFromServer: function() {
		$.ajax({
			url: this.props.url,
			dataType: 'json',
			cache: false,
			success: function(data) {
					console.log( data );
					this.setState({data: data});
				}.bind(this),
				error: function(xhr, status, err) {
					console.error(this.props.url, status, err.toString());
				}.bind(this)
		});
	},
	handleItemSubmit: function(item) {
		$.ajax({
		url: this.props.url,
		dataType: 'json',
		type: 'POST',
		data: item,
		success: function(data) {
				this.setState({data: data});
			}.bind(this),
			error: function(xhr, status, err) {
				console.error(this.props.url, status, err.toString());
			}.bind(this)
		});
	},

	getInitialState: function() {
		return {data: []};
	},
	componentDidMount: function() {
		this.loadItemsFromServer();
	},

	render: function() {
		return (
			<div className="itemBox">
				<h1>Items</h1>
				<ItemList data={this.state.data} />
				<ItemForm onItemSubmit={this.handleItemSubmit} />
			</div>
		);
	}
});

var TripBox = React.createClass({
	render: function() {
		return (
			<div className="trip">
				<h2 className="StoreName">
					{this.props.name}
				</h2>
				<small>{this.props.date}</small>
			</div>
		);
	}
});

React.render(
	<ItemBox url="items"/>,
	document.getElementById('content')
);

React.render(
	<TripBox url="trip" name="King Soopers" date="2015-05-21"/>,
	document.getElementById('trip')
);

    </script>
  </body>
</html>
